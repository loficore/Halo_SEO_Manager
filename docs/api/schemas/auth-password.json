{
  "openapi": "3.0.3",
  "info": {
    "title": "Auth Password Schema Collection",
    "version": "1.0.0"
  },
  "paths": {},
  "components": {
    "schemas": {
      "PasswordStrengthResult": {
        "type": "object",
        "description": "密码强度检查结果",
        "required": ["score", "level", "passedChecks", "failedChecks", "suggestions"],
        "properties": {
          "score": { 
            "type": "integer", 
            "minimum": 0, 
            "maximum": 100,
            "description": "密码强度分数（0-100）"
          },
          "level": { 
            "type": "string", 
            "enum": ["weak", "fair", "good", "strong"],
            "description": "强度等级"
          },
          "passedChecks": { 
            "type": "array", 
            "items": { "type": "string" },
            "description": "检查通过的项"
          },
          "failedChecks": { 
            "type": "array", 
            "items": { "type": "string" },
            "description": "未通过的检查项"
          },
          "suggestions": { 
            "type": "array", 
            "items": { "type": "string" },
            "description": "建议改进项"
          }
        }
      },
      "PasswordResetRequest": {
        "type": "object",
        "description": "密码重置请求",
        "required": ["identifier"],
        "properties": {
          "identifier": { 
            "type": "string", 
            "minLength": 1,
            "description": "用户邮箱或用户名"
          }
        }
      },
      "PasswordResetConfirm": {
        "type": "object",
        "description": "密码重置确认",
        "required": ["token", "newPassword", "confirmPassword"],
        "properties": {
          "token": { 
            "type": "string",
            "description": "重置令牌"
          },
          "newPassword": { 
            "type": "string", 
            "minLength": 8, 
            "maxLength": 128,
            "description": "新密码"
          },
          "confirmPassword": { 
            "type": "string", 
            "minLength": 8, 
            "maxLength": 128,
            "description": "确认新密码"
          }
        }
      },
      "PasswordChangeRequest": {
        "type": "object",
        "description": "密码更改请求",
        "required": ["currentPassword", "newPassword", "confirmPassword"],
        "properties": {
          "currentPassword": { 
            "type": "string", 
            "minLength": 1,
            "description": "当前密码"
          },
          "newPassword": { 
            "type": "string", 
            "minLength": 8, 
            "maxLength": 128,
            "description": "新密码"
          },
          "confirmPassword": { 
            "type": "string", 
            "minLength": 8, 
            "maxLength": 128,
            "description": "确认新密码"
          }
        }
      }
    }
  }
}